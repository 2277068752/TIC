/* 通过方法自定义模式 */
.template-custom {
  /* 绝对定位模式 pusher 和 player 都用绝对定位*/
  display: flex;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
  position: relative;
}


.template-custom live-pusher,
.template-custom live-player {
  width: 100%;
  height: 100%;
}

@media (orientation: landscape) {
  .template-custom .pusher-container {
    position: absolute;
    display: inline-block;
    top: 0vh;
    left: 0vw;
    height: 50vh;
    width: 100%;
    overflow: hidden;
    text-align: center;
  }

  .template-custom .players-container {
    position: absolute;
    display: inline-block;
    top: 50vh;
    left: 0vw;
    height: 50vh;
    width: 100%;
    text-align: center;
    vertical-align: top;
  }

  .template-custom .player-container {
    width: 50%;
    height: 25vh;
  }
}